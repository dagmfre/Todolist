<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
        <% userInput.forEach(element => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= element.name %>" onchange="this.form.submit()">
                    <input type="hidden" name="listTitle" value="<%= listTitle %>">
                    <p><%= element.name %></p>
                </div>
            </form>
        <% }); %>

        <form action="/" method="post">
            <input type="text" name="userInput" placeholder="New Item" autofocus autocomplete="off">
            <button type="submit" name="List" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include("footer") -%>